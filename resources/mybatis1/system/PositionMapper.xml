<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="PositionMapper">
	
	<resultMap type="Position" id="positionResultMap">
		<id column="POSITION_ID" property="POSITION_ID"/>
		<result column="NAME" property="NAME"/>
		<result column="PARENT_ID" property="PARENT_ID"/>
	</resultMap>
	
	<!--表名 -->
	<sql id="tableName">
		sys_position
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		NAME,		
		BIANMA,	
		PARENT_ID,
		HEADMAN,
		TEL,
		ADDRESS,
		CREATED_TIME,
		EDITED_TIME,	
		POSITION_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{NAME},	
		#{BIANMA},	
		#{PARENT_ID},
		#{HEADMAN},
		#{TEL},
		#{ADDRESS},
		#{CREATED_TIME},	
		#{EDITED_TIME},
		#{POSITION_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			POSITION_ID = #{POSITION_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			NAME = #{NAME},
			BIANMA = #{BIANMA},
			HEADMAN = #{HEADMAN},
			EDITED_TIME = #{EDITED_TIME},
			TEL = #{TEL},
			ADDRESS = #{ADDRESS},
			POSITION_ID = POSITION_ID
		where 
		POSITION_ID = #{POSITION_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			POSITION_ID = #{POSITION_ID}
	</select>
	
	<!-- 通过编码获取数据 -->
	<select id="findByBianma" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			BIANMA = #{BIANMA}
	</select>
	
	<!-- 通过ID获取数据 -->
	<select id="findByName" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			NAME = #{NAME}
	</select>
	
	<!-- 通过ID获取数据 -->
	<select id="findByHeadman" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			HEADMAN = #{HEADMAN}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where
			1=1
		<if test="pd.POSITION_ID!= null and pd.POSITION_ID != ''"><!-- 检索 -->
		and PARENT_ID = #{pd.POSITION_ID}
		</if>
		<if test="pd.keywords != null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				 NAME LIKE '%'+#{pd.keywords}+'%'
				 or 
				 HEADMAN  LIKE '%'+#{pd.keywords}+'%' 
				 or
				 BIANMA LIKE '%'+#{pd.keywords}+'%'
				)
		</if>
		[fhstart]order by NAME[fhend]
	</select>
	
	<!-- 通过ID获取其子级列表 -->
	<select id="listSubPositionByParentId" parameterType="String" resultMap="positionResultMap">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			PARENT_ID = #{parentId} order by NAME 
	</select>
	
	
	<!-- 用户列表(全部) -->
	<select id="listAllPositions" parameterType="pd" resultType="pd" >
		select  POSITION_ID,
				NAME,
				BIANMA,
				HEADMAN,
				TEL,
				ADDRESS,
				CREATED_TIME,
				EDITED_TIME
		from <include refid="tableName"></include> 
		
	<!-- 	<if test="keywords!= null and keywords != ''">关键词检索
			where 
				(
					 NAME LIKE '%'+#{keywords}+'%'
					 or 
					 BIANMA LIKE '%'+#{keywords}+'%'
					 or
					 HEADMAN LIKE '%'+#{keywords}+'%'
				)
		</if>
		<if test="POSITION_ID != null and POSITION_ID != ''">角色检索
			and POSITION_ID=#{POSITION_ID} 
		</if> -->
	</select>
	
	<!-- 列出此组下的角色 -->
	<select id="listAllPositionsById" resultMap="positionResultMap">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where
			PARENT_ID = #{POSITION_ID}
	</select>
	
	<!-- 批量删除用户 -->
	<delete id="deleteAllU" parameterType="String" >
		delete from <include refid="tableName"></include>
		where 
			POSITION_ID in
  			 <foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                  #{item}
             </foreach>
        and
			POSITION_ID &lt;&gt; '1'
	</delete>
	
	<!-- fh313596790qq(青苔) -->
</mapper>