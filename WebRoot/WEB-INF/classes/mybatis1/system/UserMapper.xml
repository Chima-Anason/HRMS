				u.JOBJOINTIME,
				u.FADDRESS,
				u.POLITICAL,
				u.PJOINTIME,
				u.SFID,
				u.MARITAL,
				u.DJOINTIME,
				u.POST,
				u.POJOINTIME,
				u.EDUCATION,
				u.SCHOOL,
				u.MAJOR,
				u.FTITLE,
				u.CERTIFICATE,
				u.CONTRACTLENGTH,
				u.CSTARTTIME,
				u.CENDTIME,
				u.ADDRESS,
				u.BZ,
				<!-- d.DEPARTMENT_ID,
				d.DEPARTMENT_NAME, -->
				r.ROLE_ID,
				r.ROLE_NAME
		from <include refid="tableName"></include> u, <include refid="roleTableName"></include> r <!-- ,<include refid="departmentTableName"></include> d -->
		where u.ROLE_ID = r.ROLE_ID
		<!-- and  u.DEPARTMENT_ID = d.DEPARTMENT_ID -->
		and u.USERNAME != 'admin'
		and r.PARENT_ID = '1'
		<if test="keywords!= null and keywords != ''"><!-- 关键词检索 -->
			and
				(
					 u.USERNAME LIKE '%'+#{keywords}+'%'
					 or 
					 u.EMAIL LIKE '%'+#{keywords}+'%'
